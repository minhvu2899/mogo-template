mixin menuLink(title,href="#")
	li.header-menu-item 
		a.header-menu-link(href=href)=title  

mixin headerBottomItem(number,title)
	.header-bottom-item
		span.header-bottom-number= number
			span.header-bottom-text= title

mixin blockBox(caption,title,desc)
	.block-box
		h3.block-box-caption= caption 
		h2.block-box-title= title 
		if desc 
			p.block-box-desc= desc

mixin aboutItem(src,title,iconClass,alt="")
	.about-item 
		img.about-img(src= src, alt= alt)
		.about-content 
			i.about-icon(class= iconClass)
			span.about-text= title

mixin serviceItem(src,title,desc)
	.service-item 
		img.service-item-icon(src= src)
		.service-item-info 
			h4.service-item-title= title 
			p.service-item-desc= desc

mixin wedoItem(src,title,desc, active="")
	.wedo-item(class= active)
		.wedo-item-header 
			img.wedo-item-icon(src= src)
			h3.wedo-item-title= title 
			i.fal.fa-angle-up.wedo-item-arrow
		.wedo-item-content 
			.wedo-item-text= desc
mixin teamSocial(facebook="#", instagram="#", twitter="#",pinterest="#")
	ul.team-social 
		li.team-social-item 
			a.team-social-link(href= facebook)
				i.fab.fa-facebook-f.team-social-icon
		li.team-social-item 
			a.team-social-link(href= instagram)
					i.fab.fa-instagram.team-social-icon
		li.team-social-item 
			a.team-social-link(href= twitter)
					i.fab.fa-twitter.team-social-icon
		li.team-social-item 
			a.team-social-link(href= pinterest)
				i.fab.fa-pinterest.team-social-icon
mixin teamItem(src,name,position) 
	.team-item 
		.team-main 
			img.team-image(src= src)
			.team-content 
				if block 
					block
		.team-info 
			h3.team-name= name  
			span.team-position= position

mixin workItem(src,icon,full="",title="Created Minh",desc="Lorem ipsum dolor sit amet") 
	.work-item(class=full)
		img.work-img(src=src)
		.work-content
			i.work-icon(class=icon)
			h3.work-title=title 
			span.work-desc=desc 

mixin quoteItem(src="../images/img-quote.png",type=false ,desc="Lorem ipsum dolor sit amet, consectetur adipisicing elit. Velit similique accusamus recusandae, rerum commodi sequi cumque iure quaerat, illum et iusto optio? ",author="Jon Doe ") 
	.quote-content
		if type == false 
			.quote-icon 
				img.quote-img(src=src)
		else 
			img.quote-image(src=src)  
		.quote-info 
			p.quote-desc= desc
			span.quote-author=author